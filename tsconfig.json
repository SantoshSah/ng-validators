{
  "compilerOptions": {
    "lib": ["es6", "es2015", "dom"],
    "module": "commonjs",
    "target": "es5",
    "alwaysStrict": true,
    "listEmittedFiles": true,
    "noImplicitAny": true,
    "outDir": "build/",
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "declaration": true,
    "stripInternal": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/"
  ]
}
